.nested-fields.well
  .form-group
    %label.col-sm-3.control-label= t 'simple_form.labels.animal.name'
    .col-sm-7
      = f.input :name, input_html: { class: 'form-control' }
  .form-group
    %label.col-sm-3.control-label= t 'simple_form.labels.animal.description'
    .col-sm-7
      = f.input :description, input_html: { class: 'form-control' }
  .form-group
    %label.col-sm-3.control-label= t 'simple_form.labels.animal.breed'
    .col-sm-7
      = f.association :breed, input_html: { class: 'form-control' }, prompt: t('simple_form.prompts.breed')
  .form-group
    .col-sm-offset-3.col-sm-7
      = link_to_remove_association f do
        %span.glyphicon.glyphicon-minus
        = t('form.remove_association', model: t('model.animal'))