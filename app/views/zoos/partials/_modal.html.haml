#animal-modal.modal.fade{ role: 'dialog', 'aria-labelledby' => 'animal-modal-label' }
  .modal-dialog{ role: 'document' }
    .modal-content
      .modal-header
        %button.close{ data: { dismiss: 'modal' }, 'aria-label' => 'Close' }
          %span{ 'aria-hidden' => 'true'} &times;
        %h4#animal-modal-label.modal-title
      #animal-body.modal-body
      .modal-footer
        %button.btn.btn-default{ data: { dismiss: 'modal' }, 'aria-label' => 'Close' }= t 'modal.button.close'