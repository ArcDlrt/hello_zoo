.row
  .col-sm-3
    = link_to 'New zoo', new_zoo_path, class: 'btn btn-primary'

= render 'shared/paginator', collection: @zoos

.row
  .col-sm-12
    %table.table.table-striped.table-with-image
      %thead
        %tr
          %th &nbsp;
          %th= t 'table.header.zoo.name'
          %th= t 'table.header.zoo.description'
          %th= t 'table.header.defaults.actions'
      %tbody
        - @zoos.each do |zoo|
          %tr
            %td= image_tag zoo.image.thumb.url, alt: '', class: 'image-list'
            %td= zoo.name
            %td= zoo.description
            %td
              = link_to edit_zoo_path(zoo), class: 'action' do
                %span.glyphicon.glyphicon-pencil
              = link_to zoo_path(zoo), class: 'action', method: :delete, data: { confirm: t('table.actions.delete.confirm') } do
                %span.glyphicon.glyphicon-trash

= render 'shared/paginator', collection: @zoos